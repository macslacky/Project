<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginDemo.Page.LoginPage"
             Shell.NavBarIsVisible="False"
             Title="Login">
    <VerticalStackLayout>
        <Entry x:Name="Username" Text="{Binding Email, Mode=TwoWay}" Placeholder="Username"/>
        <Entry x:Name="Password" Text="{Binding Password, Mode=TwoWay}" IsPassword="True" Placeholder="Password" />
        <Button x:Name="LoginButton" Clicked="LoginButton_Clicked" Text="Login" />
    </VerticalStackLayout>
</ContentPage>
    