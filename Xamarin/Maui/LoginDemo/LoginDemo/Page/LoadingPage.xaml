<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginDemo.Page.LoadingPage"
             Shell.NavBarIsVisible="False"
             Title="LoadingPage">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <!-- displays an animation to show that the application is engaged in a lengthy activity -->
        <ActivityIndicator Color="Blue" IsRunning="True" HeightRequest="50" WidthRequest="50" IsVisible="True" />
        <Label Text="Loading..." HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>